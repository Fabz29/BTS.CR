{% extends "CRGSBRBundle:Home:accueil.html.twig" %}

{% block title %}
    Rechercher des médicaments
{% endblock %}

{% block body %}
    <h3 class="text-center">Recherche de médicaments</h3>
    <hr>

    <form method="POST" action="{{ path('crgsbr_medicament_resultat')}}" class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-3 control-label">Famille</label>
            <div class="col-sm-6">
                <select class="form-control" id="idFamille" name="idFamille">
                    {% for f in mesFamilles %}
                        <option value="{{ f.getId }}"> {{ f.getLibelleFamille }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Rechercher</button>
        </div>
    </form>

    <br>
    <br>

    {% block bloc1 %}
        {% if mesResultats is defined %}
            <h3 class="text-center">Résultats de la recherche</h3>

            <hr> 

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Nom Commercial</th>
                        <th>Famille</th>
                    </tr>
                </thead>


                {% for r in mesResultats %}
                    <tr>
                        <td class="text-primary"> {{ r.getNomCommercial }}</td>
                        <td> {{ r.getFamille.getLibelleFamille }}</td>
                    </tr>
                {% endfor %}

            </table>
        {% endif %}
    {% endblock %}
{% endblock %}