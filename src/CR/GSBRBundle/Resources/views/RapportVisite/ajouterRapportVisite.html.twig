{% extends "CRGSBRBundle:Home:accueil.html.twig" %}

{% block title %}
    Nouveau rapport de visite
{% endblock %}

{% block body %}
    <h3 class="text-center">Nouveau rapport de visite</h3>

    <hr> 
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.medecin, "Praticien", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}

        <div class="col-sm-4">
            {{ form_widget(form.medecin, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.medecin) }}
        </div>
    </div>

    <div class="form-group">

        {{ form_label(form.dateRapport, "Date", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}


        <div class="col-sm-4">
            {{ form_widget(form.dateRapport, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.dateRapport) }}
        </div>
    </div>


    <div class="form-group">
        {{ form_label(form.motif, "Motif", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}


        <div class="col-sm-4">
            {{ form_widget(form.motif, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.motif) }}
        </div>
    </div>

    <div class="form-group">
        {{ form_label(form.bilan, "Bilan", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}

        <div class="col-sm-4">
            {{ form_widget(form.bilan, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.bilan) }}
        </div>
    </div>


    <div class="text-center">
        {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
        {{ form_widget(form.Enregistrer, {'attr': {'class': 'btn btn-primary'}}) }}
    </div>

    {# Génération automatique des champs pas encore écrits.
       Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
       et tous les champs cachés (type « hidden »). #}
    {{ form_rest(form) }}


    {# Fermeture de la balise <form> du formulaire HTML #}
    {{ form_end(form) }}

{% endblock %}