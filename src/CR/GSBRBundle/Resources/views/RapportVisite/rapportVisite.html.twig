{% extends "CRGSBRBundle:Home:accueil.html.twig" %}

{% block title %}
    Consultation des rapports de visite
{% endblock %}

{% block body %}
    <h3 class="text-center">Vos rapport de visites</h3>

    <hr>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr class="text-center">
                    <th>Date</th>
                    <th>Praticien</th>
                    <th>Ville</th>
                    <th>Motif</th>
                    <th>Modification</th>
                    <th>Suppression</th>
                </tr>
            </thead>
            {% for r in mesRapports %}
                <tr>
                    <td> {{ r.getDateRapport|date('d/m/Y') }} </td>
                    <td> {{ r.getMedecin.getPrenomNom }}</td>
                    <td> {{ r.getMedecin.getVilleMedecin }}</td>
                    <td> {{ r.getMotif }}</td>
                    <td> <a href="{{ path('crgsbr_rapportVisite_modifier', {'id': r.getId} )}}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <td> <a href="{{ path('crgsbr_rapportVisite_supprimer', {'id': r.getId} )}}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
